<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header") %>
</head>

<body class="bg-gray-100 text-gray-800 h-screen relative">
    <!-- Pokedex BG -->
    <div class="absolute inset-0 bg-center bg-no-repeat bg-gray-950">
    </div>

    <!-- Pokemon Thingies -->
    <div class="relative flex items-center justify-center h-full">
        <div class="bg-gradient-to-b from-lime-200 to-lime-600 bg-opacity-90 p-8 rounded-lg shadow-lg w-fit text-center border-8 border-slate-100">
            <h1 class="text-left text-3xl font-bold mb-5 capitalize text-cor    ">
                <%= pokemon.name %>
            </h1>
            <div class="flex flex-col items-center">
                <div class="bg-white rounded-lg shadow-md w-64 h-64 flex items-center justify-center">
                    <img src="<%= pokemon.sprites.front_default %>" alt="<%= pokemon.name %>" class="w-full h-auto object-contain" />
                </div>
                <p class="text-lg font-semibold">Height: <%= pokemon.height %>
                </p>
                <p class="text-lg font-semibold">Weight: <%= pokemon.weight %>
                </p>
                <p class="text-lg font-semibold">
                    Type: <%= pokemon.types.map(t=> t.type.name).join(', ') %>
                </p>
            </div>
            <div class="mt-5">
                <a href="/" class="px-4 py-2 bg-blue-500 text-white rounded-lg">Back</a>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>
</body>


</html>